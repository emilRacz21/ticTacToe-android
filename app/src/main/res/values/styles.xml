<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BoardCell">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_width">80sp</item>
        <item name="android:layout_height">80sp</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <style name="board">
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_width">115sp</item>
        <item name="android:layout_height">115sp</item>
        <item name="android:background">@drawable/board_cell</item>
    </style>
    <style name="time_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">TIME</item>
        <item name="android:layout_marginTop">12sp</item>
        <item name="android:fontFamily">@font/font1</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/current</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="time_dynamic">
            <item name="android:text">00:00</item>
            <item name="android:fontFamily">@font/font1</item>
            <item name="android:textColor">@color/white</item>
            <item name="android:textStyle">bold</item>
            <item name="android:textSize">30sp</item>
            <item name="android:layout_gravity">center</item>
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="player">
        <item name="android:fontFamily">@font/font1</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">12sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="HeaderTextStyle">
        <item name="android:text">TIC TAC TOE</item>
        <item name="android:fontFamily">@font/font1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">50sp</item>
        <item name="android:layout_marginBottom">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">65sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="PlayerImageStyle">
        <item name="android:layout_width">120sp</item>
        <item name="android:layout_height">210sp</item>
        <item name="android:layout_marginEnd">22sp</item>
        <item name="android:background">@drawable/player_previous</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ButtonTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/cells</item>
        <item name="android:layout_width">200sp</item>
        <item name="android:layout_height">80sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:fontFamily">@font/font1</item>
        <item name="android:textSize">50sp</item>
    </style>
    <style name="SquareImageStyle">
        <item name="android:layout_width">70sp</item>
        <item name="android:layout_height">70sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">22sp</item>
    </style>

/////////////////////////////////////////////////////////////////////////////////
    <style name="PlayerImageStyle.xhdpi">
        <item name="android:layout_width">100sp</item>
        <item name="android:layout_height">160sp</item>
    </style>
    <style name="time_title.xhdpi">
        <item name="android:layout_marginTop">12sp</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="time_dynamic.xhdpi">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="player.xhdpi">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">6sp</item>
    </style>

    <style name="SquareImageStyle.xhdpi">
        <item name="android:layout_width">40sp</item>
        <item name="android:layout_height">40sp</item>
    </style>
    <style name="HeaderTextStyle.xhdpi">
        <item name="android:layout_marginTop">60sp</item>
    </style>
    <style name="BoardCell.xhdpi">
        <item name="android:layout_width">60sp</item>
        <item name="android:layout_height">60sp</item>
    </style>
    <style name="board.xhdpi">
        <item name="android:layout_width">105sp</item>
        <item name="android:layout_height">105sp</item>
    </style>
    <style name="ButtonTextStyle.xhdpi">
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:layout_width">200sp</item>
        <item name="android:layout_height">80sp</item>
        <item name="android:textSize">50sp</item>
    </style>
</resources>
